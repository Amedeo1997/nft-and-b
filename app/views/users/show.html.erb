<h1>Hello, <%= @user.username.capitalize %></h1>
<h2>Your Reservations</h2>

<% @reservations.each do |reservation| %>
    <%= puts "Reservations: #{@reservations}" %>
    <%= puts "Each reservation: #{reservation}" %>

    <%= "Reservation #{reservation.start_date} until #{reservation.end_date}" %>
    <br>
    <%= image_tag(reservation.product.image, width: 100, height: 200) %>
    <br>
    <h2>Reservation Details</h2>
    <h5>Status: <strong><%= reservation.status || 'Pending' %></strong></h5>
    <br>
    <%= link_to 'Accept', accept_product_reservation_path(reservation.product, reservation), data: {turbo_method: :post} %>
    <br>
    <%= link_to 'Reject', reject_product_reservation_path(reservation.product, reservation), data: {turbo_method: :post} %>
    <br>
<% end %>
