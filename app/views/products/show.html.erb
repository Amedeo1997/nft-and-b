<div class="container-product">
  <div class="left-product">
    <%= image_tag(@product.image, :alt => "nft", class: "product-image") %>
  </div>
</div>

<div class="tag tag-product-position">
  <p><span><%= @product.price %>€</span>/day</p>
</div>

<div class= "right-product">
  <h1 id="product-title"><%= @product.name %></h1>
  <%= link_to "Get this NFT now", new_product_reservation_path(product_id: @product.id), class: "button-primary" %>
  <p id="product-paragraph">
    <%= @product.description %>
  </p>
</div>

<div class= "suggestion">
<h3>Need more?</h3>
</div>

  <div class="card-container">

<% @suggestion[0..3].each do |product| %>
    <div class="card">
      <div class="tag">
        <p><span><%= product.price %>€</span>/mo</p>
      </div>
      <%= image_tag(product.image) %>
      <h2><%= product.name %></h2>
      <p><%= product.description %></p>
    </div>
<% end %>
  </div>
