<div class="form-container", data-controller= "date-reservation">
  <h2 id="login-title" >Book <%= "#{@product.name}" %> now</h2>
  <%= image_tag(@product.image, class: "img-resize", alt: "product image") %>
  <h4 id="price"><%= "#{@product.price}" %> â‚¬/day</h4>
  <%= simple_form_for [@product, @reservation] do |f| %>
  <%= f.input :start_date, html5: true, input_html: { data: { date_reservation_target: "start", action:"input->date-reservation#calculate" } } %>
